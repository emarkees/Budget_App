<h1>Add a New Category</h1>

<%= form_with(model: @category) do |form| %>
  <!-- Include the authenticity token -->

  <!-- Category form fields (name and icon) -->
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :icon %>
    <%= form.text_field :icon %>
  </div>

  <div class="actions">
    <%= form.submit "Save" %>
  </div>
<% end %>

<%= link_to "Back", root_path %>
